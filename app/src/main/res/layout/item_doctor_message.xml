<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:visibility="gone"
            android:id="@+id/txt_time"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/grey89"
            android:text="昨天 16:23"
            android:layout_marginBottom="@dimen/dp_m_20"
            />

        <RelativeLayout
            android:layout_below="@+id/txt_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_pation_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#898989"
                android:text="杨谢君  主治医师"
                android:layout_toRightOf="@+id/image_pation_head"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_5"
                />

            <ImageView
                android:id="@+id/image_pation_head"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_alignParentLeft="true"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/head_default"
                />



                <io.github.rockerhieu.emojicon.EmojiconTextView
                    android:id="@+id/linear_chat_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_below="@+id/txt_pation_name"
                    android:layout_toRightOf="@+id/image_pation_head"
                    android:maxWidth="@dimen/dp_270"
                    android:background="@drawable/shape_mychat_helper_pop"
                    android:padding="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black1b"
                    android:text="多喝水，多休息，少吃辛辣食物多喝水，多休息，少吃辛辣食物"
                    />




        </RelativeLayout>


    </RelativeLayout>
</layout>